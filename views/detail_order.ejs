<%- include('header.ejs', {
	additional_scripts: [
		'umd/popper.min.js',
		'js/tempus-dominus.min.js'
	],
	additional_styles: [
		'css/tempus-dominus.min.css'
	]}) %>

<center>
	<div class="jumbotron">
		<h1><%= info.id %></h1>
	</div>
</center>
<div class="span9 offset1">
	<form id="form">
		<div class="row">
			<a class="btn btn-lg btn-block" href="<%= info.excel_url %>">
				<i class="bi bi-file-spreadsheet"></i>
				Export to Excel
			</a>
		</div>
		<div class="form-group row">
			<label class="col-sm-2 col-form-label" for="type">Type</label>
			<div class="col-sm-10">
				<select class="form-select">
					<% for(var i = 0; i < order_nice_types.length; ++i) { %>
						<option value="<%= i %>"<%= i == info.type ? " selected" : "" %>><%= order_nice_types[i] %></option>
					<% } %>
				</select>
			</div>
		</div>
		<div class="form-group row">
			<label class="col-sm-2 col-form-label" for="order_id"><%= order_nice_types[info.type] %> #</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" id="order_id" placeholder="<%= info.id %>" value="<%= info.id %>">
			</div>
		</div>
		<div class="form-group row">
			<label class="col-sm-2 col-form-label" for="created">Date/Time</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" id="created" placeholder="<%= info.created %>" value="<%= info.created %>">
			</div>
		</div>
		<div class="form-group row">
			<label class="col-sm-2 col-form-label" for="notes">Notes</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" id="notes" placeholder="<%= info.notes ?? "Descriptive notes" %>" value="<%= info.notes %>">
			</div>
		</div>
	</form>
	<div class="row">
		<div class="table-responsive">
			<table class="table table-bordered table-striped table-hover align-middle">
				<tr>
					<th>Qty</th>
					<th>SKU</th>
					<th>Description</th>
				</tr>
				<% for(const r of qty_detail.rows) { %>
					<tr>
						<td><%= r.qty %></td>
						<td>
							<a href="/sku/detail/<%= r.sku %>"><%= r.sku %></a>
						</td>
						<td><%= r.description %></td>
					</tr>
				<% } %>
			</table>
		</div>
	</div>
</div>

<%- include('footer.ejs') %>